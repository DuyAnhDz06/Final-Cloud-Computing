<div class="row">
   <div class="col">
      <img class="img-thumbnail" src="{{toyshop.Image}}" width="500" >
   </div>
   <div class="col">
      <table class="table table-bordered text-center mt-4">
         <tr>
            <th colspan="2" class="text text-bg-success">toyshop INFO</th>
         </tr>
         <tr>
            <th>Name</th>
            <th>{{toyshop.Name}}</th>
         </tr>
         <tr>
            <th>Brand</th>
            <th>{{toyshop.Brand}}</th>
         </tr>
         <tr>
            <th>Year</th>
            <th>{{toyshop.Year}}</th>
         </tr>
         <tr>
            <th>Date</th>
            <th>{{dateFormat toyshop.Date "DD/MM/YYYY"}}</th>
         </tr>
         <tr>
            <th>Color</th>
            <th>{{toyshop.Color}}</th>
         </tr>
         <tr>
            <th>Description</th>
            <th>{{toyshop.Description}}</th>
         </tr>
      </table>
   </div>
</div>
