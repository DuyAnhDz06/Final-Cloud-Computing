<form action="/toyshop/add" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Add new Toy </h2>
   <div class="form-group">
      <label class="text-success h6">Toy  Name</label>
      <input class="form-control" type="text" name="Name" required minlength="3" maxlength="20">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy  Brand</label>
      <input class="form-control" type="text" name="Brand" required minlength="3" maxlength="20">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy  Description</label>
      <input class="form-control" type="text" name="Description" required minlength="3" maxlength="200">
   </div>
      
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy  Image</label>
      <input class="form-control" type="text" name="Image" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy  Date</label>
      <input class="form-control" type="date" name="Date" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy  Year</label>
    
      <input class="form-control" type="number" name="Year" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">Toy  Color</label>
      <select name="Color" class="form-control">
            <option value="">Dark</option>
            <option value="Red">Red</option>
            <option value="Blue">Blue</option>
            <option value="Brown">Brown</option>
            <option value="Dark">Dark</option>
         </select>
   </div>

   <div class="form-group mt-3">
         <label class="text-success h6">FOR : </label><br>
         Male <input type="radio" name="gender" value="Male">
         Female <input type="radio" name="gender" value="Female">
      </div>
   
   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Add">
   </div>
</form>