
<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
  
   <tr>
      <th class="text-primary" colspan="5">User List</th>
      <th>
         <th></th>
         
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date</th>
      <th>Image</th>
      <th></th>
      {{!-- <th>Status</th> --}}
      <th>Description</th>
      <th>Menu</th>
   </tr>
   <tr>
      <th colspan="5">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/user/sort/asc">Ascending</option>
            <option value="/user/sort/desc">Descending</option>
         </select>
      </th>
      <th colspan="1">
         <form action="/user/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Search by name">
            </div>
         </form>
      </th>
      <th><a class="btn btn-primary" href="/user/add">ADD</a>
         <a class="btn btn-success" href="/user/drop"
            onclick="return confirm('Are you sure to drop all user ?');">DROP</a></th>
   </tr>
   {{#each user }}
   <tr>
      <td>{{name}}</td>
      <td>{{gender}}</td>
      <td>{{dateFormat dob "DD/MM/YYYY"}}</td>
      <td>
         <a href="/user/detail/{{_id}}">
            <img src="{{image}}" width="150" height="150">
         </a>
      </td>
      <td><span style="color: red; font-style: italic;font-weight: bold">{{vip}}</span></td>
<td><span style="color: red; font-style: italic;font-weight: bold">{{description}}</span></td>
      <td>
          
         <a class="btn btn-warning" href="/user/edit/{{_id}}">EDIT</a> 
         <a class="btn btn-danger" href="/user/delete/{{_id}}">DELETE</a>
      </td>
      
   </tr>
   {{/each}}
</table>


<style>
  img, svg {
    vertical-align: middle;
    border-radius: 50%;
}
body{
   background-color: rgb(255, 224, 229);
}
.table-bordered>:not(caption)>*>* {
    border-width: 0 1px;
    background: #ffd6da;
}
</style>