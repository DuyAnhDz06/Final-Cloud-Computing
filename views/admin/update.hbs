<form action="/admin/edit/{{admin._id}}" method="post" class="card p-3 bg-light text-center">
  <h2 class="text text-primary">Edit admin</h2>
  <div class="form-group">
    <label class="text-success h6">Admin Name</label>
    <input class="form-control" type="text" name="name" value="{{admin.name}}" required minlength="3"
      maxlength="2000" />
  </div>
  
  <div class="form-group mt-3">
    <label class="text-success h6">Admin Email</label>
    <input class="form-control" type="email" name="email" value="{{admin.email}}" required minlength="3"
      maxlength="5000" />

  </div>

  <div class="form-group mt-3">
    <label class="text-success h6">Admin Image</label><br />
    <img src="{{admin.image}}" width="200" height="200" />
    <input class="form-control mt-3" type="text" name="image" value="{{admin.image}}" required />
  </div>
  <div class="form-group mt-3">
    <label class="text-success h6">Admin Birthday</label>
    <input class="form-control" type="date" name="dob" value="{{dateFormat admin.dob 'YYYY-MM-DD'}}" required />
  </div>
  <div class="form-group mt-3">
    <label class="text-success h6">Admin Year</label>
    <select name="year" class="form-control">
      <option value="">Select a year</option>
      {{#equal admin.year 1}}
      <option value="1" selected>1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      {{/equal}}
      {{#equal admin.year 2}}
      <option value="1">1</option>
      <option value="2" selected>2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      {{/equal}}
      {{#equal admin.year 3}}
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3" selected>3</option>
      <option value="4">4</option>
      {{/equal}}
      {{#equal admin.year 4}}
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4" selected>4</option>
      {{/equal}}
    </select>
  </div>
  <div class="form-group mt-3">
    <label class="text-success h6">Admin Description</label>
    <input class="form-control" type="text" name="description" value="{{admin.description}}" required min="5" max="100" />
  </div>
  <div class="form-group mt-3">
    <label class="text-success h6">Graduated</label>
    {{#equal admin.graduated true}}
    <input type="checkbox" value="{{admin.graduated}}" checked />
    {{/equal}}
    {{#equal admin.graduated false}}
    <input type="checkbox" value="{{admin.graduated}}" />
    {{/equal}}
  </div>
  <div class="form-group mt-3">
    <label class="text-success h6">Admin Gender</label><br />
    Male
    <input type="radio" name="gender" value="Male" />
    Female
    <input type="radio" name="gender" value="Female" />
  </div>
  <div class="form-group mt-3">
    <input class="btn btn-primary mt-3" type="submit" value="Edit" />
  </div>

</form>

