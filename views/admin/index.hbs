
<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
  
   <tr>
      <th colspan="1">
         <form action="/admin/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Search by name.....">
            </div>
         </form>
      </th>
       <th colspan="5">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/admin/sort/asc">Ascending</option>
            <option value="/admin/sort/desc">Descending</option>
         </select>
      </th>
   </tr>
      <th class="text-primary" colspan="5">Admin List</th>
      <th>
         <a class="btn btn-primary" href="/admin/add">ADD</a>
         <a class="btn btn-success" href="/admin/drop"
            onclick="return confirm('Are you sure to drop all admin ?');">DROP</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date</th>
      <th>Image</th>
      <th>Status</th>
      <th>Description</th>
   </tr>
   <tr>
    
   {{#each admin }}
   <tr>
      <td>{{name}}</td>
      <td>{{gender}}</td>
      <td>{{dateFormat dob "DD/MM/YYYY"}}</td>
      <td>
         <a href="/admin/detail/{{_id}}">
            <img src="{{image}}" width="150" height="150">
         </a>
      </td>
      <td>
         {{#equal graduated true}}
         <span style="color: darkgreen; font-weight: bold;">Graduated</span>
         {{/equal}}
         {{#equal graduated false}}
         <span style="color: red; font-style: italic;font-weight: bold">Not Graduated</span>
         {{/equal}}
      </td>
      <td>
          <span style="color: rgb(0, 12, 179); font-style: italic;font-weight: bold">{{description}}</span>
         {{!-- <a class="btn btn-warning" href="/admin/edit/{{_id}}">EDIT</a> --}}
         {{!-- <a class="btn btn-danger" href="/admin/delete/{{_id}}">DELETE</a> --}}
      </td>
      
   </tr>
   {{/each}}
</table>


<style>
  img, svg {
    vertical-align: middle;
    border-radius: 50%;
}
body{
   background-color: rgb(255, 224, 229);
}
.table-bordered>:not(caption)>*>* {
    border-width: 0 1px;
    background: #ffd6da;
}
</style>