<form action="/user/add" method="post" class="card p-3 bg-light text-center">
   <h2 class="text text-primary">Add new User</h2>
   <div class="form-group">
      <label class="text-success h6">User Name</label>
      <input class="form-control" type="text" name="name" required minlength="3" maxlength="2000">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">User Email</label>
      <input class="form-control" type="email" name="email" required minlength="3" maxlength="2000">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">User Gender</label><br>
      Male <input type="radio" name="gender" value="Male">
      Female <input type="radio" name="gender" value="Female">
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">User Image</label>
      <input class="form-control" type="text" name="image" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">User Birthday</label>
      <input class="form-control" type="date" name="dob" required>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">User Year</label>
      <select name="year" class="form-control">
         <option value="">Select a year</option>
         <option value="1">1</option>
         <option value="2">2</option>
         <option value="3">3</option>
         <option value="4">4</option>
      </select>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">User Description</label>
      <input class="form-control" type="text" name="description" required min=5 max=100>
   </div>
   <div class="form-group mt-3">
      <label class="text-success h6">VIP ?</label>
      <input type="checkbox" name="VIP" value="true">
      <input type="checkbox" name="noVIP" value="false">
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-primary mt-3" type="submit" value="Add now!">
   </div>
</form>